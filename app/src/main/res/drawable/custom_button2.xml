<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">

        <shape>
            <gradient android:startColor="@color/on_btn_click_startcolor"
                android:endColor="@color/on_btn_click_endcolor" />

            <stroke android:color="@color/dark_red" android:width="3dp"/>

            <corners
                android:radius="15dp" />

            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>

            <corners android:radius="15dp" />


            <stroke android:color="@color/dark_red" android:width="3dp"/>

            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>