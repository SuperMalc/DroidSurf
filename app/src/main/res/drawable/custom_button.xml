<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">

        <shape>
            <gradient android:startColor="@color/on_btn_click_startcolor"
                android:endColor="@color/on_btn_click_endcolor" />

            <stroke
                android:width="1dp"
                android:color="@color/red" />
            <corners
                android:radius="6dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>

            <corners android:radius="6dp" />


            <gradient android:startColor="@color/gradient_start_color"
                android:endColor="@color/gradient_end_color" />

            <stroke
                android:width="1dp"
                android:color="@color/dark_red" />

            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>