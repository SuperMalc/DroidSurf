<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">

        <shape>
            <gradient android:startColor="#380591"
                android:endColor="#8EA5EC" />

            <stroke android:color="#BDA4EA" android:width="3dp"/>

            <corners
                android:radius="4dp" />

            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>

            <corners android:radius="4dp" />


            <stroke android:color="#673AB7" android:width="3dp"/>

            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>